	vec3 d = (p1 - p0);
	vec3 d1 = vec3(0.0,0.0,0.0);
	
	if(type == SphereHair){
		d1 = p0;
	}else if(type == PlaneHair)
	{
		d1 = vec3(0.0,0.0,1.0);
	}
	l = length(d);
	l1 = length(d1);
	vec3 f = vec3(0.0f,0.0f,0.0f);
	
	if(l != 0){
		fs = -20.0f * hardness1 * (l - knotID * (hlength / knots)) / hlength;

		e = d / l;
		f = fs * e;
	}

	if(l1 != 0){
		float par = ((knots - knotID)/knots) / hlength;
		fs = 10.0f * hardness1 * par;

		e = d1 / l1;
		f += fs * e;
	}
	return f;
}

